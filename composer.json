{
    "name": "offer-processor/offer-processor",
    "description": "Calculates order sum based on offers",
    "type": "project",
    "require": {
        "symfony/dependency-injection": "3.1.4",
        "symfony/config" : "3.1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "5.5.4",
        "behat/behat": "3.1.0"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "authors": [
        {
            "name": "Kimon Moutsakis"
        }
    ],
    "autoload": {
        "psr-4": {
          "OfferProcessor\\":"src/"
        }
    },
    "autoload-dev": {
        "psr-4": { "OfferProcessor\\Tests\\": "tests/" }
    }
}
